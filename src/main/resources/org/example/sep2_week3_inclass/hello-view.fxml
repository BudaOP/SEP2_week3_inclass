<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.sep2_week3_inclass.HelloController"
      spacing="10" alignment="CENTER">

    <Label fx:id="greetingLabel" />
    <ComboBox fx:id="languageBox" />
    <Button fx:id="fetchButton" />
    <Label fx:id="dbResultLabel" />

    <ListView fx:id="jobListView" prefHeight="180" prefWidth="320"/>
    <Button fx:id="deleteButton" style="-fx-background-color: #ef4444; -fx-text-fill: white;" />

    <Region prefHeight="10" />

    <TextField fx:id="keyField" />
    <TextField fx:id="translationField" />
    <Button fx:id="saveButton" />

</VBox>
